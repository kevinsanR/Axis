<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create a new Note</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">

</head>
<body>
    <div class="create-note-container">
        <form class="create-note-form" action="/notes" method="POST">
            <input class="title" id="titleInput" name="title" placeholder="Untitled">
            
            <!-- Quill editor container -->
            <div id="editor" style="height: 300px;"></div>
            <!-- Hidden textarea for storing the content -->
            <textarea name="contents" id="contentsInput" style="display:none;"></textarea>

            <button class="create-note-button2" type="submit">Create Note</button>
        </form>
    </div>

    <!-- Include Quill JavaScript library -->
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

    <!-- Initialize Quill editor and handle form submission -->
    <script>
        var quill = new Quill('#editor', {
            theme: 'snow'
        });

        var form = document.querySelector('.create-note-form');
        form.onsubmit = function() {
            // Populate hidden textarea with HTML from Quill editor
            document.getElementById('contentsInput').value = quill.root.innerHTML;
        };
    </script>
</body>
</html>